<div class="container px-5">
    <div class="row">
        <div class="mx-auto">
            <h1>商品編集</h1>
            
            <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local: true do |f| %>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-3 col-form-label">商品画像</label>
                    <div class="col-9">
                    <%= f.file_field :image, accept: "image/*" %>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-3 col-form-label">商品名</label>
                    <div class="col-9">
                    <%= f.text_field :name %>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-3 col-form-label">商品説明</label>
                    <div class="col-9">
                    <%= f.text_area :name, size: "30x5" %>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-3 col-form-label">ジャンル</label>
                    <div class="col-9">
                    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-3 col-form-label">税抜価格</label>
                    <div class="col-9">
                    <%= f.text_field :price %>円
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-4 col-form-label">販売ステータス</label>
                    <div class="col-9">
                    <%= f.label :is_active,"販売中" %>
                    <%= f.radio_button :is_active,'true' %>
                    
                    <%= f.label :is_active,"販売停止中" %>
                    <%= f.radio_button :is_active,'false' %>
                    </div>
                </div>
                
                <div class="form-group">
                    <%= f.submit '変更を保存',class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
