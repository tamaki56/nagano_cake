<div class="container px-5">
  <div class="row">
    <div class="mx-auto">
      <h1>商品新規登録</h1>
      
      <%= form_with model: @item,url: admin_items_path, local: true do |f| %>
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">商品画像</label>
          <div class="col-9">
          <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">商品名</label>
          <div class="col-9">
          <%= f.text_field :name %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">商品説明</label>
          <div class="col-4">
          <%= f.text_area :introduction, size: "30x5" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">ジャンル</label>
          <div class="col-9">
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="nputEmail3" class="col-3 col-form-label">税抜価格</label>
          <div class="col-9">
          <%= f.text_field :price %>円
          </div>
        </div>
        
        <div class="ow mb-3">
          <label for="nputEmail3" class="col-4 col-form-label">販売ステータス</label>
          <div class="col-10">
          <%= f.label :is_active,"販売中" %>
          <%= f.radio_button :is_active,'販売中' %>
          
          <%= f.label :is_active,"販売停止中" %>
          <%= f.radio_button :is_active,'販売停止中' %>
          </div>
        </div>
        
        <div class="section1 text-center">
          <%= f.submit '新規登録',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
