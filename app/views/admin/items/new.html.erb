<div class="container px-5">
  <div class="row">
    <div class="mx-auto">
      <h1>商品新規登録</h1>
      
      <%= form_with model: @item,url: admin_items_path, local: true do |f| %>
        <div class="form-group">
          <label for="image">商品画像</label>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name %>
        </div>
        
        <div class="form-group">
          <label for="item_intraduction">商品説明</label>
          <%= f.text_area :introduction %>
        </div>
        
        <div class="form-group">
          <label for="genre">ジャンル</label>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
        </div>
        
        <div class="form-group">
          <label for="item_price">税抜価格</label>
          <%= f.text_field :price %>円
        </div>
        
        <div class="form-group">
          <label for="item_is_active">販売ステータス</label>
          <%= f.label :is_active,"販売中" %>
          <%= f.radio_button :is_active,'販売中' %>
          
          <%= f.label :is_active,"販売停止中" %>
          <%= f.radio_button :is_active,'販売停止中' %>
        </div>
        
        <div class="form-group">
          <%= f.submit '新規登録',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
