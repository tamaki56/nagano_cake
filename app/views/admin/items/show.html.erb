<div class="container px-5">
 <div class="row">
  <div class="col-lg-5">
   <h1>商品詳細</h1>
   <%= image_tag @item.get_image(300,300) %>
  </div>
  <div class="col-lg-7">
   <div class="group">
    <label for="item_name">商品名</label>
    <%= @item.name %>
   </div>
   
   <div class="group">
    <label for="item_intraduction">商品説明</label>
    <%= @item.introduction %>
   </div>
   
   <div class="group">
    <label for="genre">ジャンル</label>
    <%= @item.genre.name %>
   </div>
   
   <div class="group">
    <label for="item_price">税込価格<br>(税抜価格)</label>
    <%= @item.price %>
    <%=@item.with_tax_price %>
   </div>
   
   <div class="group">
    <label for="item_is_active">販売ステータス</label>
    <% if @item.is_active == true %>
     <p>販売中</p>
    <% else %>
     <p>販売停止中</p>
    <% end %>
   </div>

   <%= link_to '編集する', edit_admin_item_path(@item.id),class: "btn btn-success" %>
  </div>
 </div>
</div>
