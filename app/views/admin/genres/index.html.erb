<div class="container px-5">
  <div class="row">
    <div class="col-lg-5">
      <h1>ジャンル一覧追加</h1>
      
      <%= form_with model: @genre,url: admin_genres_path, local: true do |f| %>
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
          <%= f.submit '新規登録',class: "btn btn-success" %>
        </div>
        
        
      <% end %>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する',edit_admin_genre_path(genre.id),class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
