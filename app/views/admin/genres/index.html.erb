<h1>ジャンル一覧追加</h1>

<%= form_with model: @genre,url: admin_genres_path, local: true do |f| %>
  <div class="form-group">
    <p>ジャンル名</p>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル一覧</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する',edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>