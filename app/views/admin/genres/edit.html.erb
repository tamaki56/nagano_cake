<div class="container px-5">
  <div class="row">
    <div class="col-lg-5">
      <h1>ジャンル編集</h1>
      
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
        </div>
        
        <div class="form-group">
          <%=f.submit '変更を保存',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
