<div class="container px-5">
  <div class="row md-3">
    <div class="col-lg-9">
      <h2>
        <%= @customer.first_name %>
        <%= @customer.last_name %>さんの会員情報編集
      </h2>
      <%= form_with model: @customer, url:  admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">会員ID</label>
        <div class="col-9">
        <%= @customer.id %>
        </div>
      </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">氏名</label>
          <div class="col-9">
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">フリガナ</label>
          <div class="col-9">
          <%= f.text_field :first_name_kana %>
          <%= f.text_field :last_name_kana %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">郵便番号</label>
          <div class="col-9">
          <%= f.text_field :postal_code %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">住所</label>
          <div class="col-9">
          <%= f.text_field :address, size: "60x2" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">電話番号</label>
          <div class="col-9">
          <%= f.text_field :telephone_number %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">メールアドレス</label>
          <div class="col-9">
          <%= f.text_field :email %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">会員ステータス</label>
          <div class="col-9">
          <%= f.label :is_active,"有効" %>
          <%= f.radio_button :is_active,'true' %>
          
          <%= f.label :is_active,"退会" %>
          <%= f.radio_button :is_active,'false' %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.submit '変更を保存',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>