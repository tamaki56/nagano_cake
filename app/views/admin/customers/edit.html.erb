<div class="container px-5">
  <div class="row">
    <div class="col-lg-9">
      <h2>
        <%= @customer.first_name %>
        <%= @customer.last_name %>さんの会員情報編集
      </h2>
      <%= form_with model: @customer, url:  admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
        <label for="customer_id">会員ID</label>
        <%= @customer.id %>
        
        <div class="form-group">
          <label for="name">氏名</label>
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
        </div>
        
        <div class="form-group">
          <label for="name_kana">フリガナ</label>
          <%= f.text_field :first_name_kana %>
          <%= f.text_field :last_name_kana %>
        </div>
        
        <div class="form-group">
          <label for="postal_code">郵便番号</label>
          <%= f.text_field :postal_code %>
        </div>
        
        <div class="form-group">
          <label for="addresse">住所</label>
          <%= f.text_area :addresses %>
        </div>
        
        <div class="form-group">
          <label for="telephone_number">電話番号</label>
          <%= f.text_field :telephone_number %>
        </div>
        
        <div class="form-group">
          <label for="email">メールアドレス</label>
          <%= f.text_field :email %>
        </div>
        
        <div class="form-group">
          <label for="is_active">会員ステータス</label>
          <%= f.label :is_active,"有効" %>
          <%= f.radio_button :is_active,'有効' %>
          
          <%= f.label :is_active,"退会" %>
          <%= f.radio_button :is_active,'退会' %>
        </div>
        
        <div class="form-group">
          <%= f.submit '変更を保存',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>