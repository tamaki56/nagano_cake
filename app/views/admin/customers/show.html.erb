<div class="container px-5">
  <div class="row">
    <div class="col-lg-9">
      <h3>
        <%= @customer.first_name %>
        <%= @customer.last_name %>さんの会員詳細
      </h3>
      
      <div class="row md-3">
        <label for="inputEmail3" class="col-3 col-form-label">会員ID</label>
        <div class="col-9">
        <%= @customer.id %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">氏名</label>
        <div class="col-9">
        <%= @customer.first_name %>
        <%= @customer.last_name %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">フリガナ</label>
        <div class="col-9">
        <%= @customer.first_name_kana %>
        <%= @customer.last_name_kana %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">郵便番号</label>
        <div class="col-9">
        <%= @customer.postal_code %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">住所</label>
        <div class="col-9">
        <%= @customer.address %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">電話番号</label>
        <div class="col-9">
        <%= @customer.telephone_number %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">メールアドレス</label>
        <div class="col-9">
        <%= @customer.email %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">会員ステータス</label>
        <div class="col-9">
        <% if @customer.is_active == true %>
          <p>有効</p>
        <% else %>
          <p>退会</p>
        <% end %>
        </div>
      </div>
      
      <%= link_to "編集する", edit_admin_customer_path(@customer.id),class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_path,class: "btn btn-primary" %>
    </div>
  </div>
</div>
