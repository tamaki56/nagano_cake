<div class="container px-5">
  <div class="row">
    <div class="mx-auto">
      <h1>注文履歴一覧</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>購入個数</th>
            <th>注文ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @posts.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= order.created_at.strftime('%Y/%m/%d')  %>
                <% end %>
              </td>
              <td><%= order.name %></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                <%= order_detail.amount %>
                <% end %>
                </td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
