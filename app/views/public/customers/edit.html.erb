<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h2>会員情報編集</h2>
      
      <%= form_with model: @customer,url:  customers_path, local: true do |f| %>
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">氏名</label>
        <div class="col-9">
        <%= f.text_field :first_name %><%= f. text_field :last_name %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">カナ</label>
        <div class="col-9">
        <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">郵便番号</label>
        <div class="col-9">
        <%= f.text_field :postal_code %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">住所</label>
        <div class="col-9">
        <%= f.text_field :address,size: "60x2" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">電話番号</label>
        <div class="col-9">
        <%= f.text_field :telephone_number %>
        </div>
      </div>
      
      <div class="row mb-3">
        <label for="inputEmail3" class="col-3 col-form-label">メールアドレス</label>
        <div class="col-9">
        <%= f.text_field :email %>
        </div>
      </div>
      
      <%= f.submit "編集内容を保存",class: "btn btn-success" %>
      <%= link_to "退会する",customers_unsubscribe_path, class: "btn btn-danger" %>
      
      <% end %>
    </div>
  </div>
</div>
