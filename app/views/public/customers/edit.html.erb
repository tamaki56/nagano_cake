<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h2>会員情報編集</h2>
      
      <%= form_with model: @customer,url:  customers_path, local: true do |f| %>
      <div class="group">
        <label for="name">氏名</label>
        <%= f.text_field :first_name %><%= f. text_field :last_name %>
      </div>
      
      <div class="group">
        <label for="name_kana">カナ</label>
        <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
      </div>
      
      <div class="group">
        <label for="postal_code">郵便番号</label>
        <%= f.text_field :postal_code %>
      </div>
      
      <div class="group">
        <label for="address">住所</label>
        <%= f.text_field :address %>
      </div>
      
      <div class="group">
        <label for="telephone_number">電話番号</label>
        <%= f.text_field :telephone_number %>
      </div>
      
      <div class="group">
        <label for="email">メールアドレス</label>
        <%= f.text_field :email %>
      </div>
      
      <%= f.submit "編集内容を保存",class: "btn btn-success" %>
      <%= link_to "退会する",customers_unsubscribe_path, class: "btn btn-danger" %>
      
      <% end %>
    </div>
  </div>
</div>
