<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h2>マイページ</h2>
      
      <label for="my_page">登録情報</label>
      <%= link_to "編集する", edit_customers_path,class: "btn btn-success" %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <ht>氏名</ht>
            <th>カナ</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th>電話番号</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        
        <tbody>
          <tr>
            <td><%= @customer.first_name %><%= @customer.last_name %></td>
            <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
            <td><%= @customer.postal_code %></td>
            <td><%= @customer.address %></td>
            <td><%= @customer.telephone_number %></td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      
      
      
      
      <div class="group">
        <label for="address_index">配送先</label>
        <%= link_to "一覧を見る", addresses_path,class: "btn btn-primary" %>
      </div>
      
      <div class="group">
        <label for="order_index">注文履歴</label>
        <%= link_to "一覧を見る", orders_path,class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
