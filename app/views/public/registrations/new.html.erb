<div class="container">
  <div class="row align-items-center" style="height:200px">
    <div class="col-lg-11">
      <p>新規会員登録</p>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">名前</label>
          <div class="col-9">
          <%= f.label :first_name, "(姓)" %>
          <%= f.text_field :first_name %>
          
          <%= f.label :last_name, "(名)" %>
          <%= f.text_field :last_name %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">フリガナ</label>
          <div class="col-9">
          <%= f.label :first_name,"(セイ)" %>
          <%= f.text_field :first_name_kana %>
          
          <%= f.label :last_name,"(メイ)" %>
          <%= f.text_field :last_name_kana %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">メールアドレス</label>
          <div class="col-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">郵便番号（ハイフンなし）</label>
          <div class="col-9">
          <%= f.text_field :postal_code %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">住所</label>
          <div class="col-9">
            <%= f.text_field :address, size: "60x2" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">電話番号</label>
          <div class="col-9">
          <%= f.telephone_field :telephone_number %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputEmail3" class="col-3 col-form-label">パスワード<% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)<% end %></label>
          <div class ="col-9">
          <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <label for="inputPassword3" class="col-3 col-form-label">パスワード</label>
          <div class="col-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-10">
          <%= f.submit "新規登録",class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
      <p>既に登録済みの方</p>
      <%= render "public/shared/links" %>からログインしてください
    </div>
  </div>
</div>

