<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <p>名前</p>
  <div class="field">
    <%= f.label :first_name, "姓" %>
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :last_name, "名" %>
    <%= f.text_field :last_name %>
  </div>
  
  <p>フリガナ</p>
  <div class="field">
    <%= f.label :first_name,"セイ" %>
    <%= f.text_field :first_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :last_name,"メイ" %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code,"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :address,"住所" %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number,"電話番号" %>
    <%= f.telephone_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
