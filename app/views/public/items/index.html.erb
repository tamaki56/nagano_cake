<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <h2>商品一覧(全<%= @items.count %>件)</h2>
    </div>  
  </div>
    <div class="row">
      <% @posts.each do |item| %>
      <div class="col-3">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image(200,100), size: "200x100" %>
          <p><%= item.name %></p>
          <p><%= item.price %></p> 
        <% end %>
      </div>
      <% end %>
    </div>
</div>
<%= paginate @posts %>
