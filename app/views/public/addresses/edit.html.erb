<div class="confirmation">
  <div class="row">
    <div class="col-lg-10">
      <h2>配送先編集</h2>
      
      <%= form_with model: @address , local: true do |f| %>
        <div class="group">
          <label for="postal_code">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>
        
        <div class="group">
          <label for="address">住所</label>
          <%= f.text_field :address %>
        </div>
        
        <div class="group">
          <label for="name">宛名</label>
          <%= f.text_field :name %>
        </div>
        
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
