<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h2>配送先登録/一覧</h2>
      
      <%= form_with model: @address , local: true do |f| %>
        <div class="group">
          <label for="postal_code">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>
        
        <div class="group">
          <label for="address">住所</label>
          <%= f.text_field :address %>
        </div>
        
        <div class="group">
          <label for="name">宛名</label>
          <%= f.text_field :name %>
        </div>
        
        <%= f.submit "新規登録",class: "btn btn-success" %>
      <% end %>
      
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id),class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
