<div class="container">
    <div class="row">
        <div class="mx-auta">
            <h2>注文情報入力</h2>
            
            <%= form_with model: @order,url: orders_confirm_path, method: :post, local: true do |f| %>
                <div class="group">
                    <label for="payment_method">支払方法</label>
                    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
                    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
                    
                    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
                    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
                </div>
                
                <div class="group">
                    <label for="address">お届け先</label>
                    <div class="form-group">
                        <%= f.radio_button :select_address, 0 %>
                        <%= f.label :order_address_display,"ご自身の住所" %>
                        <p>
                            <%= current_customer.postal_code %> <%= current_customer.address %>
                        </p>
                        <p>
                            <%= current_customer.first_name %> <%= current_customer.last_name %>
                        </p>
                    </div>
                    
                    <div class="form-group">
                        <%= f.radio_button :select_address, 1 %>
                        <%= f.label :address_display,"登録先住所から選択" %>
                        <p><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display),{include_blank: true} %></p>
                    </div>
                    
                    <div class="form-group">
                        <%= f.radio_button :select_address, 2 %>
                        <%= f.label :address,"新しいお届け先" %>
                        
                        <div class="form">
                            <label for="group">郵便番号(ハイフンなし)</label>
                            <%= f.text_field :postal_code %>
                        </div>
                        
                        <div class="form">
                            <label for="group">住所</label>
                            <%= f.text_field :address %>
                        </div>
                        
                        <div class="form">
                            <label for="group">宛名</label>
                            <%= f.text_field :name %>
                        </div>
                    </div>
                    <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
