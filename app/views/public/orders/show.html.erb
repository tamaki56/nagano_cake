<div class="container">
    <div class="row">
        <div class="col-lg-7">
            <h2>注文履歴詳細</h2>
            <p>注文情報</p>
            <table class="table table-hover table-inverse table-bordered">
                <thead>
                    <tr>
                        <th>注文日</th>
                        <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
                    </tr>
                    <tr>
                        <th>配送先</th>
                        <td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
                    </tr>
                    <tr>
                        <th>支払方法</th>
                        <td><%= @order.payment_method %></td>
                    </tr>
                    <tr>
                        <th>ステータス</th>
                        <td><%= @order.status %></td>
                    </tr>
                </thead>
            </table>
            
            <p>注文内容</p>
            <table class="table table-hover table-inverse table-bordered">
                <thead>
                    <tr>
                        <th>商品</th>
                        <th>単価(税込)</th>
                        <th>個数</th>
                        <th>小計</th>
                    </tr>
                </thead>
                
                <tbody>
                    <tr>
                        <td><%= @cart_item.item.name %></td>
                        <td><%= @cart_item.item.with_tax_price %></td>
                        <td><%= @cart_item.amount %></td>
                        <td><%= sum = @cart_item.item.with_tax_price * @cart_item.amount %></td>
                    </tr>
                    <% @sum << sum %>
                </tbody>
            </table>
        </div>
        
        <p>請求情報</p>
        <div class="col-lg-4">
            <table class="table table-hover table-inverse table-bordered">
                <thead>
                    <tr>
                        <th>商品合計</th>
                        <td><%= @sum.sum %></td>
                    </tr>
                    <tr>
                        <th>配送料</th>
                        <%= @order.shipping_cost %>
                    </tr>
                    <tr>
                        <th>ご請求額</th>
                        <td><%= @order.shipping_cost + @sum.sum %></td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>